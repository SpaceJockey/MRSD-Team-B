<?xml version="1.0"?>
<robot name="flexible">
  
  <link name="center_foot">
    <visual>
      <geometry>
        <box size=".075 .095 .053"/>
      </geometry>
      <material name="teal">
        <color rgba=".2 .2 1 .95"/>
      </material>
    </visual>
  </link>

  <link name="center_aft">
    <visual>
      <geometry>
        <box size=".075 .095 .032"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 -0.0475 0"/>
      <material name="green">
        <color rgba=".1 .8 .1 .95"/>
      </material>
    </visual>
  </link>

  <link name="fore_base_pole">
    <visual>
      <geometry>
        <box size=".100 .032 .162"/>
      </geometry>
      <origin rpy="-1.57075 0 0 " xyz="0 0.081 0"/>
      <material name="green"/>
    </visual>
  </link>

  <link name="fore_base_prism">
    <visual>
      <geometry>
        <cylinder length="0.15" radius=".018"/>
      </geometry>
      <origin rpy="0 1.57075 0 " xyz=".075 0 0"/>
      <material name="cyan">
	<color rgba=".8 0 .8 1"/>
      </material>
    </visual>
  </link>

  <link name="front_foot">
    <visual>
      <geometry>
        <cylinder length="0.04" radius="0.15"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0.15 0 0"/>
      <material name="teal"/>
    </visual>
  </link>

  <link name="aft_base_pole">
    <visual>
      <geometry>
      	<box size=".100 .032 .162"/>
      </geometry>
      <origin rpy="-1.57075 0 0 " xyz="0 -0.081 0"/>
      <material name="red">
      	<color rgba=".8 .1 .1 .95"/>
      </material>
    </visual>
  </link>

  <link name="aft_base_prism">
    <visual>
      <geometry>
        <cylinder length="0.15" radius=".018"/>
      </geometry>
      <origin rpy="0 -1.57075 0 " xyz="0.075 0 0"/>
      <material name="cyan">
	<color rgba=".8 0 .8 1"/>
      </material>
    </visual>
  </link>

  <link name="rear_foot">
    <visual>
      <geometry>
        <cylinder length="0.04" radius="0.15"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0.15 0 0"/>
      <material name="teal"/>
    </visual>
  </link>

  <!--    stub frames -->
  <link name="camera" />
  <link name="front_detach" />
  <link name="center_detach" />
  <link name="rear_detach" />



  <joint name="center_swivel" type="revolute">
    <axis xyz="0 0 -1"/>
    <limit effort="1000.0" lower="-.8" upper=".8" velocity="0.5"/>
    <origin rpy="0 0 0" xyz="0 -0.0475 0"/>
    <parent link="center_foot"/>
    <child link="center_aft"/>
  </joint>

  <joint name="fore_base_pitch" type="revolute">
    <axis xyz="1 0 0"/>
    <limit effort="1000.0" lower="-.6" upper=".6" velocity="0.5"/>
    <origin rpy="0 0 0" xyz="0 .0475 0"/>
    <parent link="center_foot"/>
    <child link="fore_base_pole"/>
  </joint>

  <joint name="fore_extend" type="prismatic">
    <parent link="fore_base_pole"/>
    <child link="fore_base_prism"/>
    <limit effort="1000.0" lower="0" upper="0.15" velocity="0.5"/>
    <origin rpy="0 0 1.57075" xyz="0 0.0 0"/>
  </joint>

  <joint name="front_pitch" type="revolute">
    <axis xyz="0 -1 0"/>
    <limit effort="1000.0" lower="-1.2" upper="1.2" velocity="0.5"/>
    <origin rpy="0 0 0" xyz="0.15 0 0"/>
    <parent link="fore_base_prism"/>
    <child link="front_foot"/>
  </joint>

  <joint name="aft_base_pitch" type="revolute">
    <axis xyz="-1 0 0"/>
    <limit effort="1000.0" lower="-.6" upper=".6" velocity="0.5"/>
    <origin rpy="0 0 0" xyz="0 -.095 0"/>
    <parent link="center_aft"/>
    <child link="aft_base_pole"/>
  </joint>

  <joint name="aft_extend" type="prismatic">
    <parent link="aft_base_pole"/>
    <child link="aft_base_prism"/>
    <limit effort="1000.0" lower="0" upper="0.15" velocity="0.5"/>
    <origin rpy="0 0 -1.57075" xyz="0 0.0 0"/>
  </joint>

  <joint name="rear_pitch" type="revolute">
    <axis xyz="0 -1 0"/>
    <limit effort="1000.0" lower="-1.2" upper="1.2" velocity="0.5"/>
    <origin rpy="0 0 0" xyz="0.15 0 0"/>
    <parent link="aft_base_prism"/>
    <child link="rear_foot"/>
  </joint>

  <joint name="camera_fixed" type="fixed">
    <origin xyz=".2 .05 .1" rpy="0 .3 0"/>
    <parent link="front_foot"/>
    <child link="camera"/>
  </joint>

  <joint name="front_attach" type="prismatic">
    <parent link="front_foot"/>
    <child link="front_detach"/>
    <limit effort="1000.0" lower="0" upper="0.006" velocity="0.5"/>
    <origin rpy="0 0 0" xyz="0 0.0 0"/>
  </joint>

  <joint name="center_attach" type="prismatic">
    <parent link="center_foot"/>
    <child link="center_detach"/>
    <limit effort="1000.0" lower="0" upper="0.006" velocity="0.5"/>
    <origin rpy="0 0 0" xyz="0 0.0 0"/>
  </joint>

  <joint name="rear_attach" type="prismatic">
    <parent link="rear_foot"/>
    <child link="rear_detach"/>
    <limit effort="1000.0" lower="0" upper="0.006" velocity="0.5"/>
    <origin rpy="0 0 0" xyz="0 0.0 0"/>
  </joint>
</robot>

